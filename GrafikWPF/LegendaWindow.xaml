<Window x:Class="GrafikWPF.LegendaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Wyjaśnienie statusów"
        Width="600"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Background="LightGray">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <TextBlock TextWrapping="Wrap" LineHeight="20">
                <TextBlock FontWeight="Bold" FontSize="16">Dostępność lekarzy</TextBlock>
                <LineBreak/><LineBreak/>
                <Run>Poniższe statusy określają dostępność i preferencje lekarza co do dyżuru w danym dniu. Algorytm używa ich do znalezienia optymalnego grafiku.</Run>
                <LineBreak/><LineBreak/>

                <TextBlock FontWeight="Bold" FontSize="14" Foreground="#006400">Statusy pozytywne (chęć podjęcia dyżuru)</TextBlock>
                <BulletDecorator Margin="20,10,0,0">
                    <BulletDecorator.Bullet>
                        <TextBlock Text="✅" Margin="0,0,10,0" FontSize="14"/>
                    </BulletDecorator.Bullet>
                    <TextBlock TextWrapping="Wrap"><Run FontWeight="Bold">Bardzo chcę:</Run> Najwyższy możliwy priorytet. Status ten ignoruje ograniczenia dyżuru dzień po dniu oraz w sąsiedztwie "Innego dyżuru". </TextBlock>
                </BulletDecorator>
                <BulletDecorator Margin="20,10,0,0">
                    <BulletDecorator.Bullet>
                        <TextBlock Text="👍" Margin="0,0,10,0" FontSize="14"/>
                    </BulletDecorator.Bullet>
                    <TextBlock TextWrapping="Wrap"><Run FontWeight="Bold">Chcę:</Run> Wysoki priorytet. Lekarz z tym statusem będzie brany pod uwagę przed lekarzem, który tylko "Może".</TextBlock>
                </BulletDecorator>
                <BulletDecorator Margin="20,10,0,0">
                    <BulletDecorator.Bullet>
                        <TextBlock Text="🆗" Margin="0,0,10,0" FontSize="14"/>
                    </BulletDecorator.Bullet>
                    <TextBlock TextWrapping="Wrap"><Run FontWeight="Bold">Mogę:</Run> Status neutralny, standardowa dostępność.</TextBlock>
                </BulletDecorator>
                
                <LineBreak/><LineBreak/>
                <TextBlock FontWeight="Bold" FontSize="14" Foreground="#b22222">Statusy z ograniczeniami lub negatywne</TextBlock>
                 <BulletDecorator Margin="20,10,0,0">
                    <BulletDecorator.Bullet>
                        <TextBlock Text="⚠️" Margin="0,0,10,0" FontSize="14"/>
                    </BulletDecorator.Bullet>
                    <TextBlock TextWrapping="Wrap"><Run FontWeight="Bold">Mogę warunkowo:</Run> Status specjalny. Lekarzowi w ciągu miesiąca zostanie przydzielony co najwyżej jeden dyżur spośród wszystkich dni oznaczonych w ten sposób.</TextBlock>
                </BulletDecorator>
                <BulletDecorator Margin="20,10,0,0">
                    <BulletDecorator.Bullet>
                        <TextBlock Text="🏥" Margin="0,0,10,0" FontSize="14"/>
                    </BulletDecorator.Bullet>
                    <TextBlock TextWrapping="Wrap"><Run FontWeight="Bold">Inny dyżur:</Run> Oznacza dyżur w innym miejscu. Blokuje możliwość przydziału dyżuru w dniu poprzedzającym i następującym (chyba że występuje tam status "Bardzo chcę"). </TextBlock>
                </BulletDecorator>
                <BulletDecorator Margin="20,10,0,0">
                    <BulletDecorator.Bullet>
                        <TextBlock Text="🌴" Margin="0,0,10,0" FontSize="14"/>
                    </BulletDecorator.Bullet>
                    <TextBlock TextWrapping="Wrap"><Run FontWeight="Bold">Urlop:</Run> Lekarz jest całkowicie niedostępny.</TextBlock>
                </BulletDecorator>
                 <BulletDecorator Margin="20,10,0,0">
                    <BulletDecorator.Bullet>
                        <TextBlock Text="❌" Margin="0,0,10,0" FontSize="14"/>
                    </BulletDecorator.Bullet>
                    <TextBlock TextWrapping="Wrap"><Run FontWeight="Bold">Niedostępny (---):</Run> Lekarz jest całkowicie niedostępny. Domyślny status dla każdego dnia.</TextBlock>
                </BulletDecorator>
            </TextBlock>
        </ScrollViewer>

        <Button Grid.Row="1" Content="Zamknij" IsDefault="True" Click="Zamknij_Click" HorizontalAlignment="Right" Margin="0,15,0,0" Padding="10,5"/>
    </Grid>
</Window>